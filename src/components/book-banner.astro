<div
  id="book-banner"
  tabindex="-1"
  class="fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-gray-200 shadow-lg flex items-center px-4 py-3"
>
  <div class="flex-1">
    <a
      href="https://book.nightsbridge.com/12344"
      target="_blank"
      rel="noopener"
      class="flex-1"
    >
      <button type="button" class="btn btn-primary w-full text-base">
        Check Availability & Book Now
      </button>
    </a>
  </div>
  <div class="flex-none">
    <button
      type="button"
      data-dismiss-target="#book-banner"
      class="inline-flex justify-center w-7 h-7 items-center text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 dark:hover:bg-gray-600 dark:hover:text-white"
    >
      <svg
        class="w-3 h-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
